{% for book in books %}<div class="books-card"><a href="/b/pass?id={{book.id}}" target="_blank"><div class="cover-image"><img src="{{ book.cover|thumbnail('book')|repathImg }}" alt="{{ book.title | raw }}"></div></a><div class="content"><a href="/b/pass?id={{book.id}}" target="_blank"><h2>{{ book.title | raw }}</h2></a><div class="info"><div class="author">{{ book.subtitle | raw }}</div></div><p class="summary">{{ book.summary | raw | nl2br }}</p></div></div>{% endfor %}