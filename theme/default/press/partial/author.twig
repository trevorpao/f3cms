{% for author in authors %}<div class="author-intro"><div class="author-img"><img src="{{ author.cover|thumbnail('author')|repathImg }}" alt="{{ author.title }}" class="author-avatar"></div><div class="author-info"><div class="flex"><p class="text-base primary-gray mr-3"><a href="/{{lang}}/author/{{author.slug}}"><strong>{{ author.title }}</strong></a></p><p class="text-base primary-gray">{{ author.jobtitle }}</p></div><div class="text-base primary-gray mb-6">{{ author.summary | raw | nl2br }}</div></div></div>{% endfor %}