{% for further in relateds %}<div class="article-card"><a href="/{{lang}}/press/{{ further.id }}/{{ further.slug }}" class="track" title="{{ further.title }}" data-cate="related" data-act="curiosity" data-value="2"><div class="cover-image"><img src="{{ further.cover|thumbnail('press')|repathImg }}" alt="{{ further.title | raw }}"></div></a><div class="content"><div class="tags-content"><a href="/{{lang}}/category/{{ further.category_slug }}" class="exhibition">{{ further.category }}</a>{% for tag in further.tags %} <a href="/{{lang}}/tag/{{ tag.slug }}" class="track tags" title="{{ tag.title }}" data-cate="related-press" data-act="curiosity" data-value="2">{{ tag.title }}</a> {% endfor %}</div><a href="/{{lang}}/press/{{ further.id }}/{{ further.slug }}" class="track" title="{{ further.title }}" data-cate="related" data-act="curiosity" data-value="2"><h2>{{ further.title | raw }}</h2></a><p class="summary">{{ further.info | raw | nl2br }}</p><div class="info"><div class="author">{% for author in further.authors %}<span>{{ author.title }}</span>{% endfor %}</div><div class="date">{{ further.online_date | date("Y-m-d") }}</div></div></div></div>{% endfor %}